<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ingresoUsuario</servlet-name>
        <servlet-class>Ingreso.servlet.Ingreso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Compra</servlet-name>
        <servlet-class>Compra.Servlet.Compra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>terminar</servlet-name>
        <servlet-class>Servlet.ServletFinalizar.ServletFinalizar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mostrar</servlet-name>
        <servlet-class>Servlet.ServletMostrar.ServletMostrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPago</servlet-name>
        <servlet-class>Servlet.ServletPago</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeguirComprando</servlet-name>
        <servlet-class>Compra.Servlet.SeguirComprando</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletFormaPago</servlet-name>
        <servlet-class>Servlet.ServletFormaPago</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ingresoUsuario</servlet-name>
        <url-pattern>/ingresar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Compra</servlet-name>
        <url-pattern>/Compra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>terminar</servlet-name>
        <url-pattern>/terminar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mostrar</servlet-name>
        <url-pattern>/mostrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPago</servlet-name>
        <url-pattern>/ServletPago</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeguirComprando</servlet-name>
        <url-pattern>/SeguirComprando</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletFormaPago</servlet-name>
        <url-pattern>/ServletFormaPago</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            5
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Home.html</welcome-file>
    </welcome-file-list>
</web-app>
